<?php

/**
 * Implements hook_install().
 */
function osha_search_install() {

  $permissions = array('search content', 'use advanced search');
  $anonymous = user_role_load_by_name('anonymous user');
  $authenticated = user_role_load_by_name('authenticated user');

  user_role_grant_permissions($anonymous->rid, $permissions);
  user_role_grant_permissions($authenticated->rid, $permissions);
}
